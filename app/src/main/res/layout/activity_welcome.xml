<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hellobackground"
    tools:context=".WelcomeActivity">

    <ImageView
        android:layout_marginBottom="-10dp"
        android:src="@drawable/helloimage"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttoncreateaccount"
        android:layout_alignParentTop="true"
        />

    <Button
        android:layout_height="45dp"
        android:id="@+id/buttoncreateaccount"
        android:layout_width="match_parent"
        android:layout_marginTop="-10dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/buttoncreateaccount" />
    <TextView
        android:id="@+id/ortext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Or"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerInParent="true"
        android:layout_below="@+id/buttoncreateaccount"
        android:layout_margin="20dp"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_below="@+id/ortext"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:id="@+id/third"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:autoSizeTextType="uniform"
            android:textColor="@color/colorBlack"
            android:layout_margin="3dp"
            android:textSize="17sp"
            android:id="@+id/alreadyregisteredtextv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already onBoard ?" />

        <TextView
            android:autoSizeTextType="uniform"
            android:id="@+id/logintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Login"
            android:textColor="@color/colorLightPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>

</RelativeLayout>