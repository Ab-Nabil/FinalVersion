<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/createprofilebackground"
    tools:context=".CreateProfile.CreateActiveLevelActivity">

    <ImageView
        android:id="@+id/aLBackRow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/backrow" />

    <RelativeLayout
        android:id="@+id/aLTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aLBackRow"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textcreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:gravity="center"
            android:text="CREATE YOUR PROFILE"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/aLp6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textcreate"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/cp6" />

        <TextView
            android:id="@+id/whatis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/aLp6"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:text="What is"
            android:textColor="@color/colorWhite"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whatis"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:autoSizeTextType="uniform"
            android:gravity="start"
            android:text="YOUR \nACTIVITY-LEVEL ?"
            android:textColor="@color/colorWhite"
            android:textSize="50sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aLForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/aLForwardRow"
        android:layout_below="@+id/aLTitle"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <Button

            android:id="@+id/notActive"
            android:layout_width="430dp"
            android:layout_height="90dp"
            android:layout_above="@+id/lightActive"
            android:layout_alignParentEnd="true"
            android:background="@drawable/nvactive" />

        <Button
            android:id="@+id/lightActive"
            android:layout_width="430dp"
            android:layout_height="90dp"
            android:layout_above="@+id/Active"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/lactive" />

        <Button
            android:id="@+id/Active"
            android:layout_width="430dp"
            android:layout_height="90dp"
            android:layout_above="@+id/veryActive"
            android:layout_below="@+id/fitLevelIntermediate"
            android:layout_alignParentEnd="true"
            android:background="@drawable/active" />

        <Button
            android:id="@+id/veryActive"
            android:layout_width="430dp"
            android:layout_height="90dp"
            android:layout_below="@+id/fitLevelIntermediate"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/vactive" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/aLForwardRow"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/forwardrow" />
</RelativeLayout>