<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/createprofilebackground"
    tools:context=".CreateProfile.CreateGenderActivity">

    <RelativeLayout
        android:id="@+id/genderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/maleForm"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textcreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="CREATE YOUR PROFILE"
            android:textColor="@color/colorWhite"
            android:textSize="27sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/genderp1"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textcreate"
            android:layout_alignEnd="@+id/textcreate"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/cp1" />

        <TextView
            android:id="@+id/whatis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/genderp1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"
            android:text="What is"
            android:textColor="@color/colorWhite"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whatis"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"

            android:layout_marginTop="5dp"
            android:autoSizeTextType="uniform"
            android:gravity="start"
            android:text="YOUR GENDER ?"
            android:textColor="@color/colorWhite"
            android:textSize="45sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/maleForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/genderMaleImage"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:src="@drawable/gendermale" />

        <TextView
            android:id="@+id/genderMaleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/genderMaleImage"
            android:layout_centerHorizontal="true"
            android:text="MALE"
            android:textColor="@color/colorWhite"
            android:textSize="35sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/femaleForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/genderForwardRow"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/genderFemaleImage"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/genderfemale" />

        <TextView
            android:id="@+id/genderFemaleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/genderFemaleImage"
            android:layout_centerHorizontal="true"
            android:text="FEMALE"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="35sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/genderForwardRow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:scaleType="fitEnd"
        android:src="@drawable/forwardrow" />
</RelativeLayout>